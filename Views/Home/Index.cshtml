@model FoodListViewModel
@await Component.InvokeAsync("CategoryMenu")
<div style=" margin: 10px; background-color: #F4E4CD;">
    <form class="d-flex" asp-controller="Home" asp-action="Search" method="post">
        <input asp-for="searchstr" class="form-control me-2" type="search" placeholder="Search an item" aria-label="Search">
        <button style="color:white;" class="btn" type="submit">Search</button>
    </form>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="height:400px" class="d-block w-100" src="~/lib/images/corousel1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img style="height:400px" class="d-block w-100" src="~/lib/images/corousel2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img style="height:400px" class="d-block w-100" src="~/lib/images/corousel3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="card-deck">
    <div class="card shadow">
        <div class="card-body">



            <br />
            <h4> Top Picks For You </h4>
            <div class="row">

                @foreach (var item in Model.FoodItems)
                {
                    <partial name="_foodCard" model="item" />
                }
            </div>

        </div>


    </div>

</div>


