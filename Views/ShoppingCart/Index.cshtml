@model ShoppingCartViewModel

<div style="padding-top:10px;background-color:white;">
    <div class="pull-right">
        <a class="lnk btn btn-success btn-block" asp-controller="Home" asp-action="index">
            Continue Shopping
        </a>
    </div>
    <h2>Here's Your Shopping Cart!</h2>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th></th>
                <th>Sub Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-left">
                        @item.item.name
                    </td>
                    <td class="text-right">
                        @item.item.price
                    </td>
                    <td>
                        <a class="lnk btn btn-success" asp-controller="ShoppingCart" asp-action="DecreaseEditQuantity" asp-route-itemid="@item.item.id">
                            <i class="fa fa-minus"></i>
                        </a>
                        <h3 class="lnk btn btn-success">
                            @item.quantity
                        </h3>

                        <a class="lnk btn btn-success" asp-controller="ShoppingCart" asp-action="IncreaseEditQuantity" asp-route-itemid="@item.item.id">
                            <i class="fa fa-plus"></i>
                        </a>
                    </td>
                    <td class="text-right">@((item.quantity * item.item.price).ToString("c", System.Globalization.CultureInfo.CreateSpecificCulture("hi-IN")))</td>



                    <td>
                        <a class="lnk btn btn-success" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-itemid="@item.item.id">
                            Remove item
                        </a>
                    </td>


                </tr>

            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c", System.Globalization.CultureInfo.CreateSpecificCulture("hi-IN"))
                </td>
            </tr>
        </tfoot>

    </table>
    <a class="lnk btn btn-success" asp-controller="Register" asp-action="Index">
        Check out
    </a>
    <a class="lnk btn btn-success" asp-controller="ShoppingCart" asp-action="clearCart">
        Clear cart
    </a>

</div>